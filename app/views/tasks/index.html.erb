<h1><%= t('titles.tasks') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('subtitles.title') %></th>
      <th><%= t('subtitles.description') %></th>
      <th><%= t('subtitles.completed') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.completed ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, data: { turbo_method: :delete, turbo_confirm: I18n.t('alert.confirm.destroy') } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("buttons.newtask"), new_task_path %>