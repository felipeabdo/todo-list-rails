<div class="container">

  <h1><%= t('titles.tasks') %></h1>
  
  <table>
    <thead>
      <tr>
        <th><%= t('subtitles.title') %></th>
        <th><%= t('subtitles.description') %></th>
        <th><%= t('subtitles.completed') %></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.completed ? t('taskcompleted.completed') : t('taskcompleted.notcompleted') %></td>
          <td><%= link_to t('taskaction.show'), task %></td>
          <td><%= link_to t('taskaction.edit'), edit_task_path(task) %></td>
          <td><%= link_to t('taskaction.destroy'), task, data: { turbo_method: :delete, turbo_confirm: I18n.t('alert.confirm.destroy') } %></td>
  
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to t("buttons.newtask"), new_task_path %>

</div>